<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_book_nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/start_flight"
        android:name="com.example.pilotlogbook.presentation.screens.fragments.logbook.StartFlightFragment"
        android:label="Start Flight"
        tools:layout="@layout/fragment_start_flight" />
    <fragment
        android:id="@+id/daily_flight"
        android:name="com.example.pilotlogbook.presentation.screens.fragments.logbook.DailyFlightFragment"
        android:label="Daily Flight"
        tools:layout="@layout/fragment_daily_flight" >
        <action
            android:id="@+id/action_daily_flight_to_addDailyFlightFragment"
            app:destination="@id/addDailyFlightFragment" />
    </fragment>
    <fragment
        android:id="@+id/addDailyFlightFragment"
        android:name="com.example.pilotlogbook.presentation.screens.fragments.logbook.AddDailyFlightFragment"
        android:label="Add New Daily Flight"
        tools:layout="@layout/fragment_add_daily_flight" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.pilotlogbook.presentation.screens.fragments.register.SignInFragment"
        android:label="Sign In"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_start_flight"
            app:destination="@id/start_flight" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.pilotlogbook.presentation.screens.fragments.register.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_start_flight"
            app:destination="@id/start_flight" />
    </fragment>
</navigation>